    },  
    "custom/power": {
    "tooltip": false,
    "on-click": "wlogout &",
    "format": "‚èª"
  },
    "custom/headset-status": {
        "exec": "/home/ragnar/.config/waybar/scripts/headset.sh",
        "interval": 10,
        "return-type": "json"
  },
    "custom/updates": {
        "format": "ÔÄô {} updates",
        "exec": "/home/ragnar/.config/waybar/scripts/updates.sh",
        "interval": 10,
  }
  
}
